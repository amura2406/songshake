{
    "hosting": {
        "public": "web/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "song-shake-api",
                    "region": "asia-southeast2"
                }
            },
            {
                "source": "/auth/**",
                "run": {
                    "serviceId": "song-shake-api",
                    "region": "asia-southeast2"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules"
    }
}